<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>山海关古城数据大屏</title>
    <link rel="stylesheet" href="DataView/css/index.css" th:href="@{/DataView/css/index.css}">
    <link rel="stylesheet" href="DataView/fonts/icomoon.css" th:href="@{/DataView/fonts/icomoon.css}">
    <script th:src="@{/DataView/js/vue.js}"></script>
    <script src="https://cdn.bootcss.com/axios/0.18.0/axios.min.js"></script>
</head>
<body>
<div class="viewport" id="vp">
    <div class="column">
        <div class="overview panel">
            <div class="inner">
                <div class="item">
                    <h4>{{info.jdzs}}</h4>
                    <span>
                            <i class="icon-dot" style="color: #006cff"></i>
                            胡同总数
                        </span>
                </div>
                <div class="item">
                    <h4>{{info.hs}}</h4>
                    <span>
                            <i class="icon-dot" style="color: #6acca3"></i>
                            户数
                        </span>
                </div>
                <div class="item">
                    <h4>{{info.fjsl}}</h4>
                    <span>
                            <i class="icon-dot" style="color: #6acca3"></i>
                            房间数量
                        </span>
                </div>
                <div class="item">
                    <h4>{{info.jzmj}}</h4>
                    <span>
                            <i class="icon-dot" style="color: #ed3f35"></i>
                            建筑面积(㎡)
                        </span>
                </div>
            </div>
        </div>

        <div class="users panel">
            <div class="inner">
                <h3>古城胡同房产排行</h3>
                <div class="chart">
                    <div class="bar"></div>
                    <div class="data">
                        <div class="item">
                            <h4>{{info.jzmj}}</h4>
                            <span>
                                    <i class="icon-dot" style="color: #ed3f35"></i>
                                    建筑面积(㎡)
                                </span>
                        </div>
                        <div class="item">
                            <h4>{{info.hs}}</h4>
                            <span>
                                    <i class="icon-dot" style="color: #eacf19"></i>
                                    户数总量
                                </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="point panel">
            <div class="inner">
                <h3>房产分布统计</h3>
                <div class="chart">
                    <div class="pie"></div>
                    <div class="data">
                        <div class="item">
                            <h4>{{info.hs}}</h4>
                            <span>
                                    <i class="icon-dot" style="color: #ed3f35"></i>
                                    点位总数
                                </span>
                        </div>
                        <div class="item">
                            <h4>25801</h4>
                            <span>
                                    <i class="icon-dot" style="color: #eacf19"></i>
                                    人口总数
                                </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="column">
        <div class="map">
            <h3>
                <span class="icon-cube"></span>
                古城人流量态势图
            </h3>
            <div class="chart">
                <div class="geo"></div>
            </div>
        </div>

        <div class="monitor panel">
            <div class="inner">
                <div class="tabs">
                    <a href="javascript:;" data-index="0" class="active">胡同信息</a>
                </div>
                <div class="content" style="display: block;">
                    <div class="head">
                        <span class="col">胡同名</span>
                        <span class="col">产权数</span>
                        <span class="col">房屋面积</span>
                        <span class="col">土地面积</span>
                    </div>
                    <div class="marquee-view">
                        <div class="marquee">
                            <div class="row" v-for="(htxx , index) in info.htxxs">
                                <span class="col">{{htxx.htmc}}</span>
                                <span class="col">{{htxx.cqs}}</span>
                                <span class="col">{{htxx.fwmj}}</span>
                                <span class="col">{{htxx.tdmj}}</span>
                                <span class="icon-dot"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="column">
        <div class="sales panel">
            <div class="inner">
                <div class="caption">
                    <h3>房屋类别统计</h3>
                    <a href="javascript:;" class="active" data-type="year">私产</a>
                    <a href="javascript:;" data-type="quarter">公产</a>
                    <a href="javascript:;" data-type="month">路产</a>
                    <a href="javascript:;" data-type="day">教产</a>
                    <a href="javascript:;" data-type="mm">军产</a>
                </div>
                <div class="chart">
                    <div class="label">单位:套</div>
                    <div class="line"></div>
                </div>
            </div>
        </div>
        <!-- 权利类型 -->
        <div class="sales panel">
            <div class="inner">
                <div id="qllxPie"></div>
            </div>
        </div>
        <!-- 权利性质 -->
        <div class="sales panel">
            <div class="inner">
                <div id="qlxzPie" style="width:100%;height:100%;"></div>
            </div>
        </div>
    </div>
</div>
</body>
<script  th:inline="javascript">
    var ctx = [[@{/}]];
    var prefix = ctx + "main";
    var vp = new Vue(
        {
            el:'#vp',
            data: {
                info: 1
            },
            mounted: function(){
                axios.get(prefix + '/getMainData')
                    .then(function (response) {
                        vp.info = response.data;
                    })
                    .catch(function (error) {
                        console.log(error);
                    });

            }
        }
    );
</script>
<script th:src="@{/DataView/js/jquery.min.js}"></script>
<script th:src="@{/DataView/js/echarts.min.js}"></script>
<script th:src="@{/DataView/js/china.js}"></script><!--地图-->
<script th:src="@{/DataView/js/index.js}"></script>
<script th:src="@{/DataView/js/mymap.js}"></script>
</html>